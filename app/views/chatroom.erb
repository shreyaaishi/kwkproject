    <body class="content">
        <nav class="topnav">
            <a href="/dashboard">Dashboard</a> 
            <a class="active">Community Chatroom</a> 
            <a href="/">Logout</a>
        </nav>
        <div class='chatContainer'>
           <div class='chatHeader'>
                <h3>Midwest Groupchat</h3>
           </div>
          <div class='chatMessages'>
              <%=@message%>
          </div>
          <div class='chatBottom'>
            <form action=chatroom method=post>
                <select class"custom-select" name="message">
                    <option value="Congratulations! You did it!">Congratulations! You did it!</option>
                    <option value="Nice job! Keep going!">Nice job! Keep Going!</option>
                    <option value="Remember guys...resist the urge!">Remember guys...resist the urge!</option>
                    <option value="Yes! I made it through the day">Yes! I made it through the day</option>
                    <option value="Feeling confident in myself today!">Feeling confident in myself today!</option>
                </select>
                <button class="button" type="submit">Post Message</button>
            </form>
          </div>
        </div>
    </body>
